
<div class="container">
  <div class="title">
    <h1><%= params[:attire].capitalize %></h1>
  </div>

  <div class=“container”>
      <div class ="grid_container">
      <% @attire.each do |attire| %>

      <p class ="box">  
          <%= link_to image_tag(attire.image, :class => 'thumb'), attire_path(attire)  %>
          <%= attire.name%>
      </p>
          <% end %>

      </div>
  </div>
</div>
