<h1><%= @style.name.capitalize  %></h1>

<%= image_tag @style.image, :alt => @style.name, :class => 'feature' if @style.image.present?%>

<ul>
  <li><%= @style.name %></li>
  <li><%= @style.style_type %></li>
</ul>

<hr>

<% @style.attires.each do |attire| %>
  <%= link_to image_tag(attire.image, :class =>'thumb'), attire %>
  <%= attire.name %>
<% end %>

<hr>
<h3>You may like</h3>
<% @style_random.each do |random| %>
  <% next if random == @style %>
  <%= link_to image_tag(random.image, :class => 'thumb'), random %>
  <%= random.name %>
<% end %>
