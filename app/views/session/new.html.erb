<div class="container">

  <div class="title">
      <h1>Log In</h1>
      <h2 class="errors"><%= flash[:error] %></h2>
  </div>

    <div class ="wrapper3">
      <div class="form">
      <%= form_tag login_path do %>
        <%= label_tag :email %>
        <%= email_field_tag :email %>
        <p></p>
      <br>

        <%= label_tag :password %>
        <%= password_field_tag :password %>

      <br>
        <%= submit_tag "Log In" %>
      </div>

    <div class = "form">
      <h2>New Member?</h2>
      <p>Create your account with just 3 simple inputs </p>
      <% end %>

        <%= button_to 'Create New Account', new_user_path, :method => 'get', :class => "btn btn-dark", form: {style: 'display:inline-block;'} %>
    </div>

  </div>
</div>
